{
  "name": "@yachtparty/realtime-processor",
  "version": "0.1.0",
  "description": "Real-time message processor service for Yachtparty - maintains persistent WebSocket connections to Supabase Realtime",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "docker:build": "docker build -t realtime-processor .",
    "docker:run": "docker run -p 8080:8080 --env-file .env realtime-processor"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.30.1",
    "@supabase/supabase-js": "^2.39.0",
    "@yachtparty/shared": "file:../../shared",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  }
}
