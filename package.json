{
  "name": "yachtparty",
  "version": "0.1.0",
  "description": "Multi-agent SMS-based professional networking platform",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "test:unit": "cd packages/testing && npm run test:unit",
    "test:integration": "cd packages/testing && npm run test:integration",
    "test:e2e": "cd packages/testing && npm run test:e2e",
    "test:coverage": "cd packages/testing && npm run test:coverage",
    "test:watch": "cd packages/testing && npm run test:watch",
    "db:migrate": "cd packages/database && npm run migrate",
    "db:seed": "cd packages/database && npm run seed"
  },
  "devDependencies": {
    "turbo": "^2.0.0",
    "typescript": "^5.3.0",
    "@types/node": "^20.10.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
